// NOTE: if you wish to use this with yprland, make sure to replace all instances of "niri" with hyprland!

{
    "layer": "top",
    "position": "top",
    "height": 30,
    "spacing": 4,
    "modules-left": ["niri/workspaces", "custom/sep", "niri/window"],
    "modules-center": ["clock"],
    "modules-right": ["network", "custom/sep", "cpu", "custom/sep", "memory", "custom/sep", "wireplumber", "custom/sep", "custom/power", "custom/sep", "tray"],

    "niri/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{icon}",
        "on-click": "activate",
        "persistent-workspaces": {
            "*" : 5
        }
    },
    "hyprland/window" : {
        "max-length": 40,
        "seperate-outputs": false
    },
    "custom/power": {
        "format": "⏻",
        "on-click": "bash ~/scripts/power.sh",
        "tooltop": false
    },
    "custom/sep": {
        "format": "|",
        "interval": 0,
        "tooltip": false
    },
    "clock": {
        "timezone": "Canada/Eastern",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%H:%M}",
        "format": "{:%a, %B %d %I:%M %p}"
    },
    "wireplumber": {
        "format": "{icon} {volume}%",
        "format-muted": "󰝟 Muted",
        "format-icons": {
            "default": ["", "", ""]
        },
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
    },
    "network": {
        "format-wifi": "{essid} ({signalStrength}%)",
        "format-ethernet": "Ethernet",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "Disconnected",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "cpu": {
        "format": "CPU: {usage}% "
    },
    "memory": {
        "format": "Mem: {used:0.1f}G 󰍛",
        "tooltip-format": "Usage: {used:0.1f}G / {total:0.1f}G"
    },
    "tray": {
        "spacing": 10
    }
}

/* 

To have battery life, add:

"battery": {
    "format": "󰁹 {capacity}%",
    "format-charging": "󰂄 {capacity}%"
}

Also add battery module to modules-right at root 

Then add #battery to the places where all the other modules are.

*/
