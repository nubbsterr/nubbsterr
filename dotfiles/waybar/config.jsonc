{
  "layer": "top",
  /* floaty look to the bar */
  "position": "top",
  "modules-left": [
      "custom/archicon",
      "niri/workspaces",
      "cpu",
      "memory",
      "battery",
      "custom/gpu"
  ],
  "modules-center": [
      "clock"
  ],
  "modules-right": [
      "privacy",
      "mpris",
      "idle_inhibitor",
      "pulseaudio",
      "network"
  ],
  "custom/archicon": {
      "format": "Û∞£á",
      "tooltip": false,
        "menu": "on-click",
        "menu-file": "~/.config/waybar/power.xml",
        "menu-actions": {
            "shutdown": "systemctl poweroff",
            "reboot": "systemctl reboot",
            "reboot to uefi": "systemctl reboot --firmware-setup",
            "suspend": "systemctl suspend",
            "log out (niri)": "niri msg action quit",
            "log out (hyprland)": "hyprctl dispatch exit"
        }
  },
  "clock": {
      "timezone": "Canada/Eastern",
      "tooltip-format": "{calendar}",
      "format": "{:%a, %B %d %I:%M %p}",
      "format-alt": "{:%H:%M}",
      "calendar": {
          "mode": "month"
      }
  },
  "cpu": {
      "format": "{usage}% Ôãõ"
  },
  "memory": {
      "format": "{used:0.1f}G ÓøÖ",
      "tooltip-format": "Usage: {used:0.1f}G / {total:0.1f}G"
  },
  "battery": {
      "format": "Û∞Åπ {capacity}%"
  },
  "custom/gpu": {
      "format": "{}",
      "exec": "bash ~/scripts/gpu.sh",
      "interval": 10,
      "on-click": "kitty nvtop"
  },
  "niri/workspaces": {
      "format": "{icon}",
      "persistent-workspaces": {
          "*": 3
    },
      "disable-scroll": true,
      "all-outputs": true,
      "show-special": true
  },
  "privacy": {
      "icon-spacing": 4,
      "icon-size": 18,
      "transition-duration": 250,
      "modules": [
          {
              "type": "screenshare",
			  "tooltip": true,
			  "tooltip-icon-size": 24
		  },
		  {
			  "type": "audio-out",
			  "tooltip": true,
			  "tooltip-icon-size": 24
		  },
		  {
			  "type": "audio-in",
			  "tooltip": true,
			  "tooltip-icon-size": 24
		  }
	  ],
      "ignore-monitor": true,
      "ignore": [
		  {
              "type": "audio-in",
			  "name": "cava"
		  },
		  {
			  "type": "screenshare",
			  "name": "obs"
		  }
	  ]
  },
  "mpris": {
	"format": "{player_icon} {dynamic}",
	"format-paused": "{status_icon} <i>{dynamic}</i>",
    "max-length": 30,
	"player-icons": {
		"default": "‚ñ∂",
		"mpv": "üéµ"
	},
	"status-icons": {
		"paused": "‚è∏"
	}
  },
  "idle_inhibitor": {
      "format": "{icon}",
      "format-icons": {
          "activated": "ÔÅÆ",
          "deactivated": "ÔÅ∞"
      }
  },
  "pulseaudio": {
      "format": "{icon} {volume}%",
      "format-muted": "Û∞ùü Muted",
      "format-icons": {
          "default": [
              "ÔÄ¶",
              "ÔÄß"
          ]
      }
  },
  "network": {
      "format": "Ôá´  {essid}",
      "format-ethernet": "{ifname} Û∞àÄ",
      "format-disconnected": "ÔÑß ",
      "tooltip-format": "{ifname} via {gwaddr}",
      "tooltip-format-ethernet": "ÔÉÅ {ifname} {ipaddr}/{cidr}",
      "tooltip-format-disconnected": "Disconnected",
      "max-length": 50
  }
}
