/* pywal goodies */
@import url("file:///home/nubb/.cache/wal/colors-waybar.css");

* {
    border: none;
    font-family: "JetBrainsMono Nerd Font", monospace;
    font-size: 16px;
}

window#waybar {
    background: @background;
    color: @foreground;
}

.modules-left,
.modules-right,
.modules-center {
    background: @transparent;
    border-radius: 4px;
    margin: 4px 2px;
    padding: 0 5px;
}

#custom-archicon {
  font-size: 20px;
  color: @color5;
  background: @background;
  padding-right: 17px;
}

#custom-archicon:hover {
    color: #89B8FF;
}

menu {
    border-radius: 10px;
    background: @background;
    color: @foreground;
}

menuitem {
    border-radius: 5px;
}

menuitem:hover {
    background: @color5;
    color: @background;
}

#workspaces button {
    padding: 0 8px;
    color: @foreground;
}

#workspaces button:hover {
    color: @color3; 
    background: transparent;
}

#workspaces button.active {
    color: @color3;
    border-bottom: 2px solid @blue; 
}

#window, #clock, #custom-gpu, #network, #cpu, #memory, #wireplumber {
    padding: 0 10px;
}

#network.disconnected {
    color: @color12; 
}

#wireplumber.muted {
    color: @color12; 
}

#tray {
    padding: 0 10px;
}

#custom-sep {
    color: @color7;
    padding: 0 5px;
}

#network:hover, #cpu:hover, #memory:hover, #wireplumber:hover, #clock:hover, #custom-gpu:hover {
    color: @color3;
}
