// NOTE: if you wish to use this with yprland, make sure to replace all instances of "niri" with hyprland!

{
    "layer": "top",
    "position": "top",
    "height": 30,
    "spacing": 4,
    "modules-left": ["custom/archicon", "niri/workspaces", "custom/sep", "niri/window"],
    "modules-center": ["clock"],
    "modules-right": ["network", "custom/sep", "cpu", "memory", "custom/sep", "custom/gpu", "custom/sep", "wireplumber", "custom/sep", "tray"],
    "custom/archicon": {
        "format": "",
        "tooltip": false,
            "menu": "on-click",
            "menu-file": "~/.config/waybar/power.xml",
            "menu-actions": {
                "shutdown": "systemctl poweroff",
                "reboot": "systemctl reboot",
                "reboot to uefi": "systemctl reboot --firmware-setup",
                "suspend": "systemctl suspend",
                "log out (niri)": "niri msg action quit",
                "log out (hyprland)": "hyprctl dispatch exit"
        }
    },
    "niri/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{icon}",
        "on-click": "activate",
        "persistent-workspaces": {
            "*" : 5
        }
    },
    "niri/window" : {
        "max-length": 40,
        "seperate-outputs": false
    },
    "custom/gpu": {
        "format": "{}",
        "exec": "bash ~/scripts/gpu.sh",
        "interval": 10,
        "on-click": "foot nvtop"
    },
    "custom/sep": {
        "format": "|",
        "interval": 0,
        "tooltip": false
    },
    "clock": {
        "timezone": "Canada/Eastern",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%H:%M}",
        "format": "{:%a, %B %d %I:%M %p}"
    },
    "wireplumber": {
        "format": "{icon} {volume}%",
        "format-muted": "󰝟 Muted",
        "format-icons": {
            "default": ["", "", ""]
        },
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
    },
    "network": {
        "format": "{essid}",
        "format-ethernet": "{ifname} 󰈀",
        "format-disconnected": " ",
        "tooltip-format": "{ifname} via {gwaddr}",
        "tooltip-format-ethernet": " {ifname} {ipaddr}/{cidr}",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50
    },
    "cpu": {
        "format": "{usage}% "
    },
    "memory": {
        "format": "{used:0.1f}G ",
        "tooltip-format": "Usage: {used:0.1f}G / {total:0.1f}G"
    },
    "tray": {
        "spacing": 10
    }
}

/*

To have battery life, add:

"battery": {
    "format": "󰁹 {capacity}%",
    "format-charging": "󰂄 {capacity}%"
}

Also add battery module to modules-right at root 
Then add #battery to the places where all the other modules are.
*/
