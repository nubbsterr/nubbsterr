[global]
    monitor = 0
    follow = none

    font = JetBrains Mono Nerd Font 12  
    show_age_threshold = 60
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes
    markup = full

    icon_position = left  
    icon_theme = Adwaita, hicolor  
    enable_recursive_icon_lookup = true  
    max_icon_size = 48  

    # Notification format: %a = app name, %s = summary, %b = body, %i = icon filename (for custom icons).
    format = "<b>%s</b>\n%b"

    # History
    sticky_history = yes
    history_length = 20
    notification_limit = 10

    # Make clicks useful
    mouse_left_click = open_url,do_action,close_current
    mouse_middle_click = do_action,close_current
    mouse_right_click = close_all

    browser = /usr/bin/xdg-open  # opens url in default browser

    background = "#2e2e2e"
    foreground = "#dddddd"

    frame_width = 2
    separator_height = 2  # Height of separator between notifications.
    separator_color = frame  
    sort = yes

[urgency_low]
    background = "#333333"
    timeout = 5

[urgency_normal]
    background = "#333333"
    timeout = 8

[urgency_critical]
    background = "#550000"
    frame_color = "#ff0000"
    timeout = 0
    default_icon = dialog-warning
